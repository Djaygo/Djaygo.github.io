---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Djaygo - Digital Garden',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Welcome to my corner of the internet"
    actions={[
      {
        variant: 'primary',
        text: 'Explore Notes',
        href: '/notes',
        icon: 'tabler:notebook',
      },
      {
        text: 'About Me',
        href: '/about',
        icon: 'tabler:user',
      },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Djaygo</span>'s Digital Garden
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        A space for thoughts, notes, and ideas to grow.
      </span>
      <span class="block sm:hidden">Thoughts, notes, and ideas.</span>
      <br />
      <span class="text-sm text-muted">
        This is my personal wiki — a collection of interconnected notes on topics I'm learning and exploring.
      </span>
    </Fragment>
  </Hero>

  <Features
    id="explore"
    tagline="Explore"
    title="What you'll find here"
    subtitle="A living collection of notes, ideas, and resources"
    items={[
      {
        title: 'Notes & Ideas',
        description: 'Thoughts on technology, programming, and things I find interesting.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Learning in Public',
        description: 'Documenting my learning journey — the successes and the struggles.',
        icon: 'tabler:school',
      },
      {
        title: 'Connected Thinking',
        description: 'Ideas are linked together, growing like a garden over time.',
        icon: 'tabler:vector',
      },
      {
        title: 'Work in Progress',
        description: 'Some notes are seeds, some are evergreen. All are evolving.',
        icon: 'tabler:plant-2',
      },
    ]}
  />

  <BlogLatestPosts
    title="Recent Notes"
    information="The latest additions to the garden. Click through to explore and discover connections."
  />
</Layout>
